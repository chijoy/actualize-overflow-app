<h2>Question Title: <%= @question.title %></h2>
<h4>Question: <%= @question.problem %></h4>
<h4>Status: <%= @question.status %> </h4>
<p>Posted by: <%= @question.posted_by %></p>

<%= link_to "Edit", "/questions/#{@question.id}/edit" %>
<%= link_to "Delete", "/questions/#{@question.id}", method: :delete %>

<hr>

<%= form_tag "/answers/#{@answer_id}", method: :post do %>
  <div class="form-group">
  Enter a suggested solution:
    <%= text_area_tag :suggestion, nil, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= submit_tag "Submit Suggestion", :class=>"btn btn-sm btn-success" %>
  </div>
<% end %>

<table class="table table-hover">
  <tr>
    <th>Suggestions</th>
  </tr>
  <% @question.answers.each do |answer| %>
  <tr>
    <td><%= answer.solution %></td>
  </tr>
  <% end %>
</table>
